@model StoreViewModel
'
<h1>
    Create
</h1>

<br/>

<div class="row">
    <div class="col-6">
           <div class="card">
                <div class="card-header">
                    <h5>Create a new drink</h5>
                </div>

                <div class="card-body">
                    <form asp-controller="ABout" asp-action="CreateDrink" method="post">
                        <div class="mb-3">
                            <label class="form-label">
                                Drink name
                            </label>
                            <input asp-for="Name" type="text" class="form-control"/>
                        </div>

                    <div class="mb-3">
                        <label class="form-label">
                            Drink quantity
                        </label>
                        <input asp-for="Quantity" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    </form>
                </div>

                <div class="card-footer">

                </div>
           </div>

    </div>
</div>